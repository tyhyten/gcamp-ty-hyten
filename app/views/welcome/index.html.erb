          <ul>
            <li>Upload</li>
            <li>Comment</li>
            <li>Revise</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <p class ="lead">
      <%= image_tag("guyatcomputer.jpg", class: "img-responsive") %>
      </p>
