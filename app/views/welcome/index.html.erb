<div class="container">
  <div class="jumbotron">

    <h1>gCamp</h1>
    <p>Your life, organized.</p>

  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <p class ="lead">
      <%= image_tag("yellowtablet.jpg", class: "img-responsive") %>
      </p>
      <!-- <img alt="Panel1" class="img-responsive" src="/assets/yellowtablet.jpg"> -->
      <div class="panel panel-primary">
        <div class="panel-heading">
          Tasks
        </div>
        <div class="panel-body">
