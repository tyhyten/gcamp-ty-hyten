<div class = "container">
  <div class = "page-header">
    <div class = "pull-right">
      <%= link_to 'New Task', new_project_task_path, class: 'btn btn-info' %>
    </div>

    <h1>Tasks for <%= @project.name %></h1>
  <ol class="breadcrumb">
    <li><%= link_to 'Projects', projects_path %></li>
    <li><%= link_to @project.name, project_path(@project) %></li>
    <li class="active">Tasks</li>
  </ol>

  </div>

<p id="notice"><%= notice %></p>

  <table class="table">
    <thead>
      <tr>
        <th>Description</th>
        <th>Complete</th>
        <th>Due</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to "#{task.description}", project_task_path(@project, task) %> <div class="badge"><%= task.comments.count %></div></td>
          <td><%= task.complete %></td>
          <td><%= task.date %></td>
          <td class="text-right">
            <%= link_to 'Edit', edit_project_task_path(@project, task), class: 'btn btn-info' %>
            <%= link_to '<span class="glyphicon glyphicon-remove"></span>'.html_safe, project_task_path(@project, task), method: :delete, data: { confirm: 'Are you sure?'} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
