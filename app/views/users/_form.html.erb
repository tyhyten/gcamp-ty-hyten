
<%= form_for(@user, html: {class: 'form-horizontal'}) do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation", class="alert alert-danger">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this task from being saved:</h2>

  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="form-group">
    <%= f.label :first_name, class: "col-md-2" %>
    <%= f.text_field :first_name, class: "col-md-4" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "col-md-2" %>
    <%= f.text_field :last_name, class: "col-md-4" %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-md-2" %>
    <%= f.email_field :email, class: "col-md-4" %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary col-md-offset-2'%>
    <%= link_to 'Cancel', users_path, class: 'btn btn-default'%>
    <% if @user.id != nil %>
    <%= link_to 'Delete', user_path, class: 'btn btn-danger',  method: :delete, data: { confirm: 'Are you sure?'} %>
    <% end %>
  </div>
  </div>
<% end %>
