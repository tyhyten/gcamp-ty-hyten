<div class="container">
  <div clas="page-header">
    <div class = "pull-right">
      <%= link_to'New User', new_user_path, class: 'btn btn-info' %>
    </div>

    <h1>Users</h1>
    <hr>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
          <th>Email</th>
          <th class="col-md-offset-2"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
        </tr>
        <% end %>
      </tbody>

    </table>

  </div>
</div>
