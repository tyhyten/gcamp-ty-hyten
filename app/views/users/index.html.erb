<div class="container">
  <div clas="page-header">
    <div class = "pull-right">
      <%= link_to'New User', new_user_path, class: 'btn btn-info' %>
    </div>

    <h1>Users</h1>
    <hr>
    <table class="table">
      <thead>
        <tr>
          <th class="col-md-2 col-md-offset-2">Name</th>
          <th></th>
          <th>Email</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %> <%= user.last_name %></td>
          <td></td>
          <td><%= mail_to user.email %></td>
        </tr>
        <% end %>
      </tbody>

    </table>

  </div>
</div>
