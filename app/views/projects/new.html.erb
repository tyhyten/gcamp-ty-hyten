<div class="container">
  <div class="page-header">
  <h1>Projects</h1>
  </div>

    <%= form_for(@project, html: {class: 'form-horizontal'}) do |f| %>

    <%= render partial: 'share/form', locals: { error_var: @project } %>

    <div class="form-group">
      <%= f.label :name, class: "col-md-2" %>
      <%= f.text_field :name, class: "col-md-4" %>
    </div>

    <div class="form-group">
      <%= f.submit class: 'btn btn-primary col-md-offset-2'%>
      <%= link_to 'Cancel', projects_path, class: 'btn btn-default'%>
      <% end %>
    </div>

</div>
